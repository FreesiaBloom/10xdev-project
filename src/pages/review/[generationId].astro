---
import Layout from "@/layouts/Layout.astro";
import ReviewForm from "@/components/ReviewForm.tsx";

const { generationId } = Astro.params;
const generationIdAsNumber = Number(generationId);
---

<Layout title="Przegląd wygenerowanych fiszek">
  <main class="container mx-auto flex max-w-4xl flex-col items-center gap-8 px-4 py-12">
    <div class="flex flex-col items-center gap-2">
      <h1 class="text-3xl font-bold tracking-tight">Propozycje fiszek</h1>
      <p class="text-center text-lg text-muted-foreground">
        Przejrzyj, edytuj lub usuń wygenerowane propozycje, a następnie zapisz je w swojej kolekcji.
      </p>
    </div>
    <ReviewForm client:load generationId={generationIdAsNumber} />
  </main>
</Layout>
