---
import Layout from "@/layouts/Layout.astro";
import GenerationForm from "@/components/GenerationForm";
---

<Layout title="Wygeneruj fiszki">
  <main class="container mx-auto flex max-w-4xl flex-col items-center gap-8 px-4 py-12">
    <div class="flex flex-col items-center gap-2">
      <h1 class="text-3xl font-bold tracking-tight">Wygeneruj fiszki z dowolnego tekstu</h1>
      <p class="text-center text-lg text-muted-foreground">
        Wklej tekst (od 1000 do 10 000 znaków), a my zajmiemy się resztą.
      </p>
    </div>
    <GenerationForm client:load />
  </main>
</Layout>
