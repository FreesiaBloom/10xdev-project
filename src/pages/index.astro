---
import Layout from "@/layouts/Layout.astro";

// Always redirect to auth/login - middleware will handle test mode
return Astro.redirect("/auth/login");
---

<Layout title="10x Cards">
  <main class="container mx-auto flex max-w-4xl flex-col items-center gap-8 px-4 py-12">
    <div class="flex flex-col items-center gap-2">
      <h1 class="text-3xl font-bold tracking-tight">10x Cards</h1>
      <p class="text-center text-lg text-muted-foreground">Generuj fiszki z dowolnego tekstu przy pomocy AI</p>
    </div>

    <div class="flex gap-4">
      <a
        href="/generate"
        class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2"
      >
        Wygeneruj fiszki
      </a>
      <a
        href="/my-flashcards"
        class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2"
      >
        Moje fiszki
      </a>
    </div>
  </main>
</Layout>
